<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="phy2049.projects.colordetectorplusplus" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="phy2049.projects.colordetectorplusplus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="phy2049.projects.colordetectorplusplus.CameraActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName="phy2049.projects.colordetectorplusplus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="phy2049.projects.colordetectorplusplus.MainActivity" />
                android:label="@string/app_name"
                android:screenOrientation="landscape">
                <!-- configure this activity to use landscape orientation -->
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>

        </activity>



    </application>

</manifest>
